@model IReadOnlyList<string>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Queue – Transactions & Inventory</h2>
<form asp-action="Enqueue" method="post">
	<input type="text" name="itemId" placeholder="Item ID" value="ABC-ITEM-1" />
	<select name="action">
		<option>purchase</option>
		<option>restock</option>
	</select>
	<input type="number" name="quantity" value="1" min="1" />
	<button type="submit">Enqueue</button>
	@Html.AntiForgeryToken()
</form>
<form asp-action="Seed5" method="post" style="margin-top:1rem"><button type="submit">Seed 5 Messages</button></form>
@if (Model.Count == 0)
{
	<p>No messages (peek) yet.</p>
}
<ol>
	@foreach (var m in Model)
	{
		<li><pre>@m</pre></li>
	}
</ol>
